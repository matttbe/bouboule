<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".LoosingActivity" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LOOSER" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true" >

        <Button
            android:id="@+id/LoosingNextLevelButton"
            android:layout_width="299dp"
            android:layout_height="wrap_content"
            android:layout_above="@+id/LoosingMenuButton"
            android:layout_alignRight="@+id/LoosingMenuButton"
            android:layout_marginBottom="58dp"
            android:background="@null"
            android:text="@string/Loosing_continue"
            android:textColor="#33b5e5"
            android:textSize="40sp" />

        <Button
            android:id="@+id/LoosingMenuButton"
            android:layout_width="313dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@null"
            android:text="@string/Menu"
            android:textColor="#33b5e5"
            android:textSize="40sp" />

        <Button
            android:id="@+id/LoosingQuitButton"
            android:layout_width="292dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/LoosingNextLevelButton"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="65dp"
            android:background="@null"
            android:text="@string/Quit"
            android:textColor="#33b5e5"
            android:textSize="40sp" />
    </RelativeLayout>

</RelativeLayout>