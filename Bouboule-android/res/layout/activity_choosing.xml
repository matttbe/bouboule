<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/settings_blanc"
    tools:context=".MenuParametre_global" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top|center_horizontal"
            android:text="Choose your level"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <ImageView
            android:id="@+id/choose_lvl_mid"
            android:layout_width="fill_parent"
            android:layout_height="100dp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Level 1"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <ImageButton
                android:id="@+id/choose_lvl_left"
                android:layout_width="fill_parent"
                android:layout_height="100dp"
                android:layout_weight="1" />

            <ImageButton
                android:id="@+id/choose_lvl_right"
                android:layout_width="fill_parent"
                android:layout_height="100dp"
                android:layout_weight="1" />

        </LinearLayout>

        <Button
            android:id="@+id/choose_lvl_button1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Go Go Go" />

    </LinearLayout>

</FrameLayout>