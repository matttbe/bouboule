<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="be.ac.ucl.lfsab1509.bouboule"
    android:versionCode="5"
    android:versionName="0.1" >

    <uses-sdk
        android:minSdkVersion="17"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:logo="@drawable/ic_launcher" >
        <activity
            android:name="be.ac.ucl.lfsab1509.bouboule.Menu"
            android:configChanges="keyboard|keyboardHidden|orientation|screenSize"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="be.ac.ucl.lfsab1509.bouboule.MainActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenSize"
            android:launchMode="singleTask"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="be.ac.ucl.lfsab1509.bouboule.Game"
            android:configChanges="keyboard|keyboardHidden|orientation|screenSize"
            android:launchMode="singleTask"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="be.ac.ucl.lfsab1509.bouboule.EndGameActivity"
            android:label="@string/title_activity_end_game" >
        </activity>
        <activity
            android:name="be.ac.ucl.lfsab1509.bouboule.VictoryActivity"
            android:label="@string/title_activity_victory" >
        </activity>
        <activity
            android:name="be.ac.ucl.lfsab1509.bouboule.LoosingActivity"
            android:label="@string/title_activity_loosing" >
        </activity>
    </application>

</manifest>